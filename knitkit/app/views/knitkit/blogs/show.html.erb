<div class="container">
  <div class="page-header">
    <%= link_to "Back", @blog.path %>
    <h1><%= @blog.title %></h1>
    <h3><%= @published_content.title %></h3>
  </div>
  <p>
    Posted: <%= @published_content.created_at.to_s(:long) %> <%= published_content_created_by %><br/>
    Topics: <%= @published_content.content.pretty_tag_list %>
  </p>
  <%= sanitize @body_html %>
  <h3>Comments</h3>
  <br/>
  <%= blog_recent_approved_comments %>
  <br/>
</div>
<hr/>
<%= blog_add_comment_form %>