<header class="padding-top-20">
  
  <div class="wrapper">

    <div class="container">

      <nav role="navigation" class="navbar navbar-inverse navbar-embossed navbar-lg">
	<div class="navbar-header">
	  <button data-target="#navbar-collapse-02" data-toggle="collapse" class="navbar-toggle" type="button">
	    <span class="sr-only">Toggle navigation</span>
	  </button>
	  <a href="#" class="navbar-brand brand editContent" data-selector=".editContent"> HTML Builder</a>
	</div>

	<div id="navbar-collapse-02" class="collapse navbar-collapse">
	  <%= content_for?(:menu) ? yield(:menu) : render_menu(@contents) %>

	  <div class="nav navbar-nav navbar-right" style="padding-left: 12px;" data-widget-statement="render_widget :login,
        											      :action => :login_header,
        											      :params => {:login_url => '/login', :signup_url => '/sign-up'} ">
            <%= render_widget :login,
                :action => :login_header,
            :params => {:login_url => '/login', :signup_url => '/sign-up'} %>     
          </div>  

	  <div class="nav navbar-nav navbar-right" style="width:300px;margin-right:10px;" data-widget-statement="render_widget :search,
        													 :action => :index,
        													 :params => {:redirect_results => true, :results_permalink => '/search-results'}">   
            <%= render_widget :search,
                :action => :index,
            :params => {:redirect_results => true, :results_permalink => '/search-results'} %>
          </div>  
          
	</div><!-- /.navbar-collapse -->
      </nav>

    </div><!-- /.container -->

  </div><!-- /.wrapper -->

</header>

